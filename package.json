{
  "name": "wego-global",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/client",
    "apps/server",
    "packages/shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev --workspace apps/server\" \"npm:dev --workspace apps/client\"",
    "build": "npm run build --workspace packages/shared && npm run build --workspace apps/server && npm run build --workspace apps/client",
    "prisma:generate": "npm run prisma:generate --workspace apps/server",
    "prisma:migrate": "npm run prisma:migrate --workspace apps/server",
    "test": "npm run test --workspace apps/server",
    "test:e2e": "npm run test:e2e --workspace apps/client"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
